#include <bits/stdc++.h>
using namespace std;

int main() {
    int n;
    cin>>n;
    int t=0;
    vector<int> temp;
    for (int i=0;i<n;i++){
        int n1,n2;
        cin>>n1>>n2;
        t=t+n2-n1;
        temp.push_back(t);
    }
    cout<<*max_element(temp.begin(),temp.end());
    return 0;
}
