
 #include<bits/stdc++.h>
using namespace std;
 
int main(){
    vector<int> t;
    int n,b;
    cin>>n>>b;
    int x=0;
    for (int i=0;i<n;i++){
        int temp;
        cin>>temp;
        t.push_back(temp);
    }
    int k=t[b-1];
    for (auto y:t){
        if (y>=k && y>0)
        x++;
    }
    cout<<x;
    return 0;
}
